# Игровое поле (список из 9 элементов)
board = [' '] * 9

# Функция отображения игрового поля
def show_board():
    for i in range(3): # цикл по строкам
        print(f" {board[i * 3]} | {board[i * 3 + 1]} | {board[i * 3 + 2]} ") # вычисляют индексы для текущей строки
        if i < 2:
            print("-----------") # разделяет между строками


# Проверка победы
def check_win():
    # Все возможные выигрышные комбинации
    wins = [
        [0, 1, 2], [3, 4, 5], [6, 7, 8],  # строки
        [0, 3, 6], [1, 4, 7], [2, 5, 8],  # столбцы
        [0, 4, 8], [2, 4, 6]  # диагонали
    ]

    for a, b, c in wins: # содержит все 8 возможных выигрышных комбинаций (3 строки, 3 столбца, 2 диагонали)
        if board[a] == board[b] == board[c] != ' ': #проверяет все вохможные комбинации
            return board[a]  # возвращает 'X' или 'O'
    return 'Ничья' if ' ' not in board else None # Если нет победителя и нет пустых клеток, возвращает 'Ничья, None (игра продолжается)

# Основной игровой цикл
def game():
    player = 'X'  # Первый игрок

    while True: #внешний бесконечный цикл продолжается до победы или ничья
        show_board()

        # Ход игрока
        while True:
            try:
                move = int(input(f"Игрок {player}, введите номер клетки (1-9): ")) - 1 #преобразует ввод (1-9) в индекс (0-8)
                if 0 <= move <= 8 and board[move] == ' ': # Проверяет, что индекс в диапазоне и клетка свободна
                    break
                print("Некорректный ход! Попробуйте еще раз.")
            except ValueError:
                print("Введите число от 1 до 9!")

        board[move] = player # записывает символ игрока в выбранную клетку

        # Проверка результата
        result = check_win() # Проверяет результат игры
        if result:
            show_board()
            print("Ничья!" if result == 'Ничья' else f"Игрок {result} победил!")
            break

        player = 'O' if player == 'X' else 'X'  # Смена игрока


# Запуск игры
print("Добро пожаловать в Крестики-Нолики!")
print("Клетки пронумерованы от 1 до 9, как на телефоне")
game()
